{% extends 'AcmeHelloBundle::layout.html.twig' %}

{% block content %}

    <h2>Lista produktów dostępnych w sklepie</h2>
    
    <div class="count">
        Wszyskich produktów: {{ pagination.getTotalItemCount }}
    </div>
    
    <div>
        <span>{{ knp_pagination_sortable(pagination, 'Id', 'p.id') }}</span>
        <span{% if pagination.isSorted('p.Name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Name', 'p.name') }}</span>
    </div>
    
    {% for product in pagination %}
        {% include 'AcmeHelloBundle:Default:product.html.twig' %}
    {% endfor %}
    
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    
{% endblock %}